#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# 1. Quick commit message length check (if provided via -m flag)
echo "ğŸ” Checking commit message format..."
COMMIT_MSG=$(ps -ocommand= -p $PPID | grep -o '\-m[[:space:]]*"[^"]*"' | sed 's/-m[[:space:]]*"//' | sed 's/"$//')
if [ -n "$COMMIT_MSG" ]; then
  MSG_LENGTH=${#COMMIT_MSG}
  if [ $MSG_LENGTH -gt 100 ]; then
    echo "âŒ Commit message too long: $MSG_LENGTH characters (max 100)"
    echo "ğŸ’¡ Current message: $COMMIT_MSG"
    echo "âš ï¸  Please shorten your commit message"
    exit 1
  elif [ $MSG_LENGTH -lt 10 ]; then
    echo "âŒ Commit message too short: $MSG_LENGTH characters (min 10)"
    echo "ğŸ’¡ Current message: $COMMIT_MSG"
    echo "âš ï¸  Please provide a more descriptive commit message"
    exit 1
  else
    echo "âœ… Commit message length OK ($MSG_LENGTH characters)"
  fi
else
  echo "â­ï¸  Commit message will be entered interactively"
fi

# 2. Run lint-staged and lint for faster commits
echo "ğŸ” Running code quality checks..."
pnpm lint-staged && pnpm lint
